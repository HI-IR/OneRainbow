<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp">

    <!-- 黑色圆圈 -->
    <ImageView
        android:id="@+id/special_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="12dp"
        android:scaleType="fitXY"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/cd" />

    <!-- 专辑封面 -->
    <com.google.android.material.imageview.ShapeableImageView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/img_cover_1"
        android:layout_marginLeft="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/loading"
        app:shapeAppearanceOverlay="@style/ItemCommunityPicksCorners" />

    <!-- 专辑标题 -->
    <TextView
        android:id="@+id/tv_special_title"
        android:text="标题"
        android:textStyle="bold"
        android:textColor="@color/text_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textSize="13sp"
        android:layout_marginStart="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/special_img"
        android:ellipsize="end" />

    <!-- 作者列表 -->
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/flex_special_author"
        flexWrap="wrap"
        android:textColor="@color/text_second"
        android:layout_marginLeft="10dp"
        justifyContent="flex-start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/special_img"
        app:layout_constraintTop_toBottomOf="@id/tv_special_title" />

    <!-- 发行时间 -->
    <TextView
        android:id="@+id/tv_special_time"
        android:layout_marginStart="5dp"
        android:text=",发行时间"
        android:textSize="11sp"
        android:layout_marginBottom="2dp"
        android:textColor="@color/text_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/flex_special_author"
        app:layout_constraintStart_toEndOf="@id/flex_special_author" />

</androidx.constraintlayout.widget.ConstraintLayout>
