<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_item"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="15dp">
    <ImageView
        android:id="@+id/playlist_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/sungle_close"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tv_playlist_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="不知名歌单"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toRightOf="@id/playlist_img"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tv_playlist_number"
        android:text="188首音乐"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="12sp"
        android:textColor="@color/text_second"
        app:layout_constraintTop_toBottomOf="@id/tv_playlist_title"
        app:layout_constraintLeft_toRightOf="@id/playlist_img"/>
    <TextView
        android:id="@+id/tv_playlist_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="by summer"
        android:textSize="12sp"
        android:textColor="@color/text_second"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toRightOf="@id/tv_playlist_number"
        app:layout_constraintTop_toBottomOf="@id/tv_playlist_title"/>



</androidx.constraintlayout.widget.ConstraintLayout>