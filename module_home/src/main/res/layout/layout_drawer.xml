<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:fitsSystemWindows="true"
    android:background="@color/drawer"
    android:layout_gravity="start"
    android:clickable="true"
    android:focusable="true"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/user"
        android:layout_marginTop="5dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_avatar"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/avatar"
            app:shapeAppearanceOverlay="@style/circleImageStyle" />
        <TextView
            android:maxEms="10"
            android:maxLines="1"
            android:ellipsize="end"
            android:visibility="gone"
            android:layout_marginStart="5dp"
            android:id="@+id/tv_username"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username"/>

        <TextView
            android:layout_marginStart="5dp"
            android:id="@+id/tv_login"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即登录"/>
        <TextView
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/user"
        app:layout_constraintBottom_toTopOf="@id/bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp">
        <LinearLayout
            android:id="@+id/info"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:padding="15dp"

            android:layout_height="match_parent">

            <!--会员信息-->
            <ImageView
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="145dp"
                android:src="@drawable/vip"/>

            <!--选项-->
            <LinearLayout
                android:layout_marginBottom="15dp"
                android:background="@drawable/item_background"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/item_collect"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="45dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/heart"/>
                    <TextView
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的收藏"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/item_recentplayed"
                    android:padding="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="45dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/recentplayed"/>
                    <TextView
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="最近播放"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/item_cloud"
                    android:padding="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="45dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/cloud"/>
                    <TextView
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的云盘"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/item_subscription"
                    android:padding="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="45dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/subscription"/>
                    <TextView
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的关注"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent">
        <android.widget.Button
            android:visibility="gone"
            android:id="@+id/btn_logout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_logout"
            android:text="退出登录"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>