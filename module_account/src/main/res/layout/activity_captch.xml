<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginui"
    tools:context="com.onerainbow.module.account.CaptchActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tv_in_captcha"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:maxLength="6"
        app:boxBackgroundColor="@color/input_text"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusTopStart="8dp"
        app:boxStrokeColor="@color/white"
        app:endIconMode="clear_text"
        app:hintEnabled="false"
        android:layout_marginTop="350dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/in_captcha"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:maxLength="6"
            android:hint="输入验证码"
            android:inputType="number"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_login"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="17dp"
        app:backgroundTint="@color/login_button"
        app:cornerRadius="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_in_captcha" />

</androidx.constraintlayout.widget.ConstraintLayout>