<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tv_input_username"
        android:layout_width="250dp"
        android:layout_height="65dp"
        app:endIconMode="clear_text"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusTopStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxBackgroundColor="@color/input_text"
        app:boxStrokeColor="@color/white"
        app:hintEnabled="false"
        android:maxLength="15"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_username"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="账号"
            android:inputType="phone"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tv_input_password"
        android:layout_width="250dp"
        android:layout_height="65dp"
        app:endIconMode="clear_text"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusTopStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxBackgroundColor="@color/input_text"
        app:boxStrokeColor="@color/white"
        app:hintEnabled="false"
        android:maxLength="15"
        app:layout_constraintTop_toBottomOf="@id/tv_input_username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_password"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="密码"
            android:inputType="phone"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/username_button"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:textSize="17dp"
        android:text="登录"
        android:textColor="@color/white"
        app:cornerRadius="25dp"
        app:backgroundTint="@color/login_button"
        app:layout_constraintTop_toBottomOf="@id/tv_input_password"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkbox"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@null"
        android:layout_marginTop="18dp"
        app:buttonTint="@color/checkbox_tint_gray"
        app:useMaterialThemeColors="false"
        app:layout_constraintTop_toBottomOf="@id/username_button"
        app:layout_constraintLeft_toLeftOf="@id/username_button" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="是否遵循规则与协定"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/checkbox"
        app:layout_constraintTop_toBottomOf="@id/username_button"/>



</androidx.constraintlayout.widget.ConstraintLayout>
