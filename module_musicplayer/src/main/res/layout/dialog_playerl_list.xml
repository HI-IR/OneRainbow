<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_playerlist">

    <View
        android:layout_width="50dp"
        android:layout_height="5dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/item_player"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />
    <View
        app:layout_constraintTop_toBottomOf="@id/guideline"
        android:layout_width="match_parent"
        android:background="@color/item"
        android:layout_height="1px"/>
    <ImageView
        android:id="@+id/playerlist_clean"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/clean"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/playerlist_rv"
        app:layout_constraintTop_toBottomOf="@+id/playerlist_clean"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>




</androidx.constraintlayout.widget.ConstraintLayout>