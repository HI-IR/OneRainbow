<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_toplist_background"
    android:padding="15dp"
    android:layout_margin="15dp">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="飙升榜"
        android:textColor="@color/text_first"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_cover"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/loading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        app:shapeAppearanceOverlay="@style/ItemCuratedCorners" />

    <TextView
        android:layout_marginTop="-3dp"
        android:id="@+id/tv_no1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="1"
        android:textColor="@color/text_first"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/img_cover"
        app:layout_constraintTop_toTopOf="@id/img_cover" />

    <TextView
        android:id="@+id/tv_no2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:text="2"
        android:textColor="@color/text_first"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/img_cover"
        app:layout_constraintTop_toBottomOf="@id/tv_no1" />

    <TextView
        android:id="@+id/tv_no3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:text="3"
        android:textColor="@color/text_first"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/img_cover"
        app:layout_constraintTop_toBottomOf="@id/tv_no2" />

    <TextView
        android:id="@+id/tv_no1_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:ellipsize="end"
        android:maxEms="14"
        android:maxLines="1"
        android:text="歌名"
        android:textColor="@color/text_first"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/tv_no1"
        app:layout_constraintTop_toTopOf="@id/img_cover" />

    <TextView
        android:id="@+id/tv_no2_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:ellipsize="end"
        android:maxEms="14"
        android:maxLines="1"
        android:text="歌名"
        android:textColor="@color/text_first"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/tv_no2"
        app:layout_constraintTop_toTopOf="@id/tv_no2" />

    <TextView
        android:id="@+id/tv_no3_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:ellipsize="end"
        android:maxEms="14"
        android:maxLines="1"
        android:text="歌名"
        android:textColor="@color/text_first"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/tv_no3"
        app:layout_constraintTop_toTopOf="@id/tv_no3" />

    <TextView
        android:id="@+id/tv_no1_creator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="- 歌手"
        android:maxEms="7"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/text_second"
        app:layout_constraintStart_toEndOf="@id/tv_no1_name"
        app:layout_constraintTop_toTopOf="@id/tv_no1" />

    <TextView
        android:id="@+id/tv_no2_creator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="- 歌手"
        android:maxEms="7"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/text_second"
        app:layout_constraintStart_toEndOf="@id/tv_no2_name"
        app:layout_constraintTop_toTopOf="@id/tv_no2" />

    <TextView
        android:id="@+id/tv_no3_creator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="- 歌手"
        android:maxEms="7"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/text_second"
        app:layout_constraintStart_toEndOf="@id/tv_no3_name"
        app:layout_constraintTop_toTopOf="@id/tv_no3" />

</androidx.constraintlayout.widget.ConstraintLayout>